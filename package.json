{
  "name": "react-get-user-media",
  "version": "0.1.8",
  "description": "A high order component that exposes some functions related to navigator.mediaDevices",
  "main": "src/index.js",
  "module": "dist/react-get-user-media.js",
  "scripts": {
    "debug": "NODE_PATH=./ parcel samples.html --out-dir debug",
    "test": "NODE_PATH=./ jest --coverage",
    "build": "rollup -c",
    "prepublishOnly": "NODE_ENV=production npm run clean && npm run lint && npm run build",
    "clean": "rimraf dist",
    "lint": "standard"
  },
  "keywords": [
    "react",
    "webrtc-adapter",
    "getUserMedia"
  ],
  "author": "Felipe Ramos <f3liperamos@hotmail.com>",
  "license": "WTFPL",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^15.0.0-0 || ^16.0.0-0"
  },
  "dependencies": {
    "audio-recorder-polyfill": "^0.1.2",
    "webrtc-adapter": "^6.2.1"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.1.0",
    "parcel-bundler": "^1.9.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.61.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "standard": "^11.0.1"
  },
  "standard": {
    "globals": [
      "atob",
      "Blob",
      "test",
      "expect",
      "describe"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/enzymeSetup.js",
    "coveragePathIgnorePatterns": [
      "<rootDir>/samples/",
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/"
    ]
  }
}
